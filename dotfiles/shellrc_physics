alias mountfs="sshfs lxportal2.physik.rwth-aachen.de:/home/home1/institut_3a/geiser/aachen-3a-cms /Users/erik/code/aachen-a3a-cms/sshfs -oreconnect -odefer_permissions -onegative_vncache -ovolname=sshfsvol"
alias umountfs="diskutil unmount force /Users/erik/code/aachen-a3a-cms/sshfs"

function vsync {
  repo=${1-LBN}
  rsync -azvP ~/code/aachen-3a-cms/$repo vportal:~/aachen-3a-cms
}

function lxsync {
  repo=${1-LBN}
  rsync -azvP ~/code/aachen-3a-cms/$repo lxportal2:~/aachen-3a-cms
}

function autovsync {
  repo=${1-LBN}
  echo "Syncing $repo"
  vsync $repo && fswatch -0 -r ~/code/aachen-3a-cms/$repo -e index.lock | xargs -0 -n 1 -I{} rsync -azvP ~/code/aachen-3a-cms/$repo vportal:~/aachen-3a-cms
}

function autolxsync {
  repo=${1-LBN}
  echo "Syncing $repo"
  lxsync $repo && fswatch -0 -r ~/code/aachen-3a-cms/$repo -e index.lock | xargs -0 -n 1 -I{} rsync -azvP ~/code/aachen-3a-cms/$repo lxportal2:~/aachen-3a-cms
}

alias autolsync="fswatch -0 -r ~/code/aachen-a3a-cms/local/LNN -e index.lock | xargs -0 -n 1 -I{} rsync -avzP ~/code/aachen-a3a-cms/local/LNN/ lx3a05:~geiser/aachen-3a-cms/LNN"


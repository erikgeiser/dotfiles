dcd() {
  [ -z "$1" ] && host="lx3a05" || host="$1"
  for i in {1..150}; do
    echo "$i / 150 ($host)"
    echo 'sleep 290 && exit' | ssh -ttq "$host" > /dev/null;
  done
}

alias killlast="kill -9 %1"

